<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <SearchView
        android:id="@+id/searchCity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:iconifiedByDefault="true"
        android:queryHint="Milwaukee, WI"
        />
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="80dp"
        >

        <TextView
            android:id="@+id/textViewCityName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Milwaukee, WI, USA"
            android:textStyle="bold"
            android:textSize="22dp"
            android:lineHeight="20dp"
            android:layout_marginBottom="30dp"
            />

        <TextView
            android:id="@+id/textViewLatTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Latitude:"
            android:textSize="18dp"
            android:lineHeight="20dp"

            />


        <TextView
            android:id="@+id/textViewLat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="43.0389025"
            android:textSize="16dp"
            android:lineHeight="20dp"
            android:layout_marginBottom="15dp"

            />

        <TextView
            android:id="@+id/textViewLongTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Longitude:"
            android:textSize="18dp"
            android:lineHeight="20dp"
            />

        <TextView
            android:id="@+id/textViewLong"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-87.9064736"
            android:textSize="16dp"
            android:lineHeight="20dp"
            android:layout_marginBottom="15dp"
            />

    </LinearLayout>

<!--    <TextView-->
<!--        android:id="@+id/rawCodeData"-->
<!--        android:layout_width="wrap_content"-->
<!--        android:layout_height="wrap_content"-->
<!--        android:text=""-->
<!--        />-->


</LinearLayout>